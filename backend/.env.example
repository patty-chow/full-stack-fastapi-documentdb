# Environment variables for the FastAPI DocumentDB application

# FastAPI settings
DEBUG=true
PROJECT_NAME="Full Stack FastAPI DocumentDB"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# CORS origins (comma separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# DocumentDB/MongoDB settings
# For AWS DocumentDB, use: mongodb://username:password@cluster-endpoint:27017/?ssl=true&ssl_ca_certs=rds-combined-ca-bundle.pem&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
# For local development with MongoDB: mongodb://localhost:27017
DOCUMENTDB_CONNECTION_STRING=mongodb://localhost:27017
DOCUMENTDB_DATABASE_NAME=fastapi_db

# Security
SECRET_KEY=your-secret-key-here

# Email settings (if using email features)
# SMTP_TLS=True
# SMTP_PORT=587
# SMTP_HOST=
# SMTP_USER=
# SMTP_PASSWORD=
# EMAILS_FROM_EMAIL=